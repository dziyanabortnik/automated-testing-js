{
  "name": "automated-testing-js",
  "version": "1.0.0",
  "description": "Practice task for automated testing",
  "main": "index.js",
  "scripts": {
    "test": "mocha --reporter mochawesome",
    "coverage": "c8 npm run test && c8 report --reporter=html",
    "lint": "eslint .",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dziyanabortnik/automated-testing-js.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dziyanabortnik/automated-testing-js/issues"
  },
  "homepage": "https://github.com/dziyanabortnik/automated-testing-js#readme",
  "devDependencies": {
    "@babel/cli": "^7.27.1",
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.1",
    "@eslint/js": "^9.26.0",
    "c8": "^10.1.3",
    "chai": "^5.2.0",
    "eslint": "^9.26.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "mocha": "^11.2.2",
    "mochawesome": "^7.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "eslintIgnore": [
    "coverage/*.js"
  ]
}
